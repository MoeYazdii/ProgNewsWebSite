@model IEnumerable<DataLayer.NewsPage>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<br />
<br />

<p>
    @Html.ActionLink("ساخت خبر جدید", "Create", null, htmlAttributes: new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageGroup.GroupTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Visit)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ShowInSlider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/PageImages/@item.ImageName" class="thumbnail" style="max-width: 120px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageGroup.GroupTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowInSlider)
            </td>
            <td>
                @item.CreateDate.ToShamsi()
            </td>
            <td>
                @Html.ActionLink("جزییات", "Details", new { id = item.PageID }, htmlAttributes: new { @class = "btn btn-primary" }) |
                @Html.ActionLink("تغییرات", "Edit", new { id = item.PageID }, htmlAttributes: new { @class = "btn btn-warning" }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.PageID }, htmlAttributes: new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
